generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
model User {
  id                  String   @id @default(uuid())
  user_id             String   @unique   // Jedinstveni identifikator za korisnika
  country             String              // Zemlja korisnika
  device_os           String              // OS uređaja (iOS, Android, Web)
  registration_date   DateTime            // Datum i vreme registracije

  sessions            Session[]           // Veza sa sesijama

  homeMatches         Match[] @relation("HomeMatches")  // Utakmice gde je korisnik domaćin
  awayMatches         Match[] @relation("AwayMatches")  // Utakmice gde je korisnik gost
}

model Session {
  id          String   @id @default(uuid())
  user_id     String              // Veza sa korisnikom
  user        User     @relation(fields: [user_id], references: [user_id])

  start_time  DateTime            // Vreme početka sesije
  end_time    DateTime?           // Vreme kraja sesije (može biti null ako sesija nije završena)
}

model Match {
  id                String   @id @default(uuid())
  match_id          String   // Jedinstveni identifikator utakmice
  home_user_id      String   // Korisnik koji igra kod kuće
  away_user_id      String   // Korisnik koji igra u gostima

  home_user         User?    @relation("HomeMatches", fields: [home_user_id], references: [user_id]) //oneToMany
  away_user         User?    @relation("AwayMatches", fields: [away_user_id], references: [user_id])

  home_goals_scored Int?     // Broj golova kod kuće
  away_goals_scored Int?     // Broj golova u gostima

  match_start       DateTime  // Vreme početka utakmice
  match_end         DateTime? // Vreme kraja utakmice (može biti null ako nije završena)
}

model Timezone {
  id        String   @id @default(uuid())
  country   String   @unique             // Zemlja (jedinstvena po vremenskoj zoni)
  timezone  String                       // Vremenska zona (npr. "America/New_York")
}
